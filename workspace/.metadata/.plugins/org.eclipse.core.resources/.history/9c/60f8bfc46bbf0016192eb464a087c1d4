import java.util.Scanner;

public class patt2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("enter a number");
		Scanner scn = new Scanner(System.in);
		int n = scn.nextInt();
		int i =0;
		for(i = 0; i<=n;i=i+2)
		{
			for(int j = (n+1)/2 -i;j>0;j--)
			{
				System.out.print(" ");
			}
			for(int p = 0; p<=i;p++)
			{
				System.out.print("* ");
			}
			System.out.println();
		}
		
		for(i = i-2;i>=1;i = i-2)
		{
			for(int j = (n+1)/2 -i;j>0;j--)
			{
				System.out.print(" ");
			}
			for(int p = 0; p<=i;p++)
			{
				System.out.print("* ");
			}
			System.out.println();
		}
	}

}

